<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:background="#ffe6ffda">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/RENT"
                android:background="#ff06a900">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD INCOME"
                    android:id="@+id/category"
                    android:layout_gravity="center_horizontal|top"
                    android:textSize="30dp"
                    android:textColor="#ffffffff"
                    android:textStyle="normal|bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frameLayout2"
                android:background="#ff06a900"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOME"
                    android:id="@+id/hme_enter"
                    android:layout_gravity="center_horizontal|top"
                    android:textSize="25dp"
                    android:background="#ffe6ffda"
                    android:textStyle="normal|bold"
                    android:textColor="#ff06a900" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:id="@+id/textView3"
                android:textSize="25dp"
                android:textColor="#FF000000"
                android:layout_marginTop="70dp"
                android:layout_below="@+id/RENT"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/date"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/inc_amt"
                android:layout_alignStart="@+id/inc_amt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AMOUNT"
                android:id="@+id/textView5"
                android:textSize="25dp"
                android:textColor="#FF000000"
                android:layout_marginTop="80dp"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/inc_amt"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toEndOf="@+id/textView8"
                android:layout_toRightOf="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHEQUE NO."
                android:id="@+id/textView8"
                android:layout_below="@+id/inc_amt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="25dp"
                android:textColor="#FF000000"
                android:layout_marginTop="15dp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/inc_chq"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignRight="@+id/inc_amt"
                android:layout_alignEnd="@+id/inc_amt"
                android:layout_toRightOf="@+id/textView8"
                android:layout_toEndOf="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOTES"
                android:id="@+id/textView12"
                android:layout_below="@+id/textView8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#FF000000"
                android:textSize="25dp"
                android:layout_marginTop="15dp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inc_notes"
                android:layout_alignBottom="@+id/textView12"
                android:layout_toRightOf="@+id/textView8"
                android:layout_alignRight="@+id/inc_chq"
                android:layout_alignEnd="@+id/inc_chq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLACE"
                android:id="@+id/textView13"
                android:layout_below="@+id/textView12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="25dp"
                android:textColor="#FF000000"
                android:layout_marginTop="15dp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inc_place"
                android:layout_alignBottom="@+id/textView13"
                android:layout_alignLeft="@+id/inc_notes"
                android:layout_alignStart="@+id/inc_notes"
                android:layout_alignRight="@+id/inc_notes"
                android:layout_alignEnd="@+id/inc_notes" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET DATE"
                android:id="@+id/set_date"
                android:layout_below="@+id/date"
                android:layout_alignRight="@+id/date"
                android:layout_alignEnd="@+id/date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff000000"
                android:textStyle="normal|bold"
                android:textSize="20dp"
                android:background="#ff98d773"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:id="@+id/btn_submit"
                android:layout_below="@+id/inc_place"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/inc_place"
                android:layout_alignEnd="@+id/inc_place"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:textColor="#FF000000"
                android:background="#ff98d773"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:id="@+id/textView19"
                android:textSize="25dp"
                android:textColor="#FF000000"
                android:textStyle="bold"
                android:layout_above="@+id/date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sel_type"
                android:layout_alignBottom="@+id/textView19"
                android:layout_alignLeft="@+id/date"
                android:layout_alignStart="@+id/date"
                android:layout_alignTop="@+id/textView19"
                android:spinnerMode="dropdown" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>