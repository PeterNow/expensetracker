<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">




        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:background="#ffe6ffda"
            android:clickable="false"
            android:id="@+id/expensetrackie">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/RENT"
                android:background="#ff06a900">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPENSE TRACKIE"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal|top"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textStyle="normal|bold" />
            </FrameLayout>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ABOUT US"
                android:id="@+id/btn_about"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:background="#ff98d773"
                android:textSize="25dp"
                android:layout_marginTop="66dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/frameLayout9" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/frameLayout9"
                android:layout_below="@+id/RENT">

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#ff06a900"
                android:id="@+id/expensetrackie">



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOME"
                    android:id="@+id/settings_home"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_alignParentBottom="true"
                    android:background="#ffe6ffda"
                    android:textColor="#ff06a900"
                    android:textSize="30dp"
                    android:textStyle="normal|bold" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT LAYOUT COLOUR"
                android:id="@+id/textView28"
                android:layout_marginTop="57dp"
                android:textColor="#FF000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@+id/btn_about"
                android:layout_alignLeft="@+id/btn_about"
                android:layout_alignStart="@+id/btn_about" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/textView28"
                android:layout_alignStart="@+id/textView28"
                android:id="@+id/radiogroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lemon Chiffon"
                    android:id="@+id/optionl"
                    android:checked="false"
                    android:textColor="#ff000000"
                    android:textSize="18dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Green Color"
                    android:id="@+id/optiong"
                    android:layout_marginTop="20dp"
                    android:checked="false"
                    android:textColor="#ff000000"
                    android:textSize="18dp" />
            </RadioGroup>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:id="@+id/btn_save"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:background="#ff98d773"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/radiogroup"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
