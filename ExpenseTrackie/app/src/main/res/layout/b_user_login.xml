<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">




        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:background="#ffe6ffda"
            android:clickable="false"
            android:id="@+id/expensetrackie">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/RENT"
                android:background="#ff06a900">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPENSE TRACKIE"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal|top"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textStyle="normal|bold" />
            </FrameLayout>
            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/editText"
                android:layout_marginTop="145dp"
                android:textColor="#010101"
                android:background="@drawable/round_corner"
                android:hint="Username"
                android:textSize="25dp"
                android:layout_below="@+id/frameLayout9"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignStart="@+id/editText2" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:layout_marginTop="37dp"
                android:id="@+id/editText2"
                android:textColor="#010101"
                android:background="@drawable/round_corner"
                android:hint="PIN"
                android:textSize="25dp"
                android:layout_below="@+id/editText"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:id="@+id/btn_login"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:background="#ff98d773"
                android:textSize="25dp"
                android:layout_below="@+id/editText2"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignStart="@+id/editText2"
                android:layout_marginTop="66dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/frameLayout9"
                android:layout_below="@+id/RENT">

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#ff06a900"
                android:id="@+id/expensetrackie">



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOME"
                    android:id="@+id/home"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_alignParentBottom="true"
                    android:background="#ffe6ffda"
                    android:textColor="#ff06a900"
                    android:textSize="30dp"
                    android:textStyle="normal|bold" />

            </FrameLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
