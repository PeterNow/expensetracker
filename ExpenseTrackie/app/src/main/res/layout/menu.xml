<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">




        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:background="#fffffccb"
            android:clickable="false"
            android:id="@+id/expensetrackie">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/RENT"
                android:background="#ffff3e1a">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPENSE TRACKIE"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal|top"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textStyle="normal|bold" />
            </FrameLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW EXPENSE"
                android:id="@+id/btn_view_exp"
                android:textSize="20dp"
                android:background="#ffffd26d"
                android:textStyle="normal|bold"
                android:clickable="false"
                android:layout_below="@+id/add_inc"
                android:layout_alignLeft="@+id/add_exp"
                android:layout_alignStart="@+id/add_exp"
                android:layout_alignRight="@+id/add_inc"
                android:layout_alignEnd="@+id/add_inc"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPENSE VS INCOME"
                android:id="@+id/btn_expinc"
                android:textSize="20dp"
                android:background="#ffffd26d"
                android:textStyle="normal|bold"
                android:clickable="false"
                android:layout_below="@+id/btn_view_inc"
                android:layout_alignRight="@+id/btn_view_inc"
                android:layout_alignEnd="@+id/btn_view_inc"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW INCOME"
                android:id="@+id/btn_view_inc"
                android:textSize="20dp"
                android:background="#ffffd26d"
                android:textStyle="normal|bold"
                android:clickable="false"
                android:layout_below="@+id/btn_view_exp"
                android:layout_alignRight="@+id/btn_view_exp"
                android:layout_alignEnd="@+id/btn_view_exp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REMAINDER"
                android:id="@+id/btn_remainder"
                android:textSize="20dp"
                android:background="#ffffd26d"
                android:textStyle="normal|bold"
                android:clickable="false"
                android:layout_below="@+id/btn_expinc"
                android:layout_alignRight="@+id/btn_expinc"
                android:layout_alignEnd="@+id/btn_expinc"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANALYSIS"
                android:id="@+id/btn_analysis"
                android:textSize="20dp"
                android:background="#ffffd26d"
                android:textStyle="normal|bold"
                android:clickable="false"
                android:layout_below="@+id/btn_remainder"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_analysis"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/frameLayout9">

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#ffff3e1a"
                android:id="@+id/expensetrackie">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECORD"
                    android:id="@+id/main_rec"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_alignParentBottom="true"
                    android:background="#fffffccb"
                    android:textColor="#ffff6e00"
                    android:textSize="30dp"
                    android:textStyle="normal|bold" />

            </FrameLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD EXPENSE"
                android:id="@+id/add_exp"
                android:textSize="20dp"
                android:background="#ffffd26d"
                android:textStyle="normal|bold"
                android:clickable="false"
                android:layout_below="@+id/RENT"
                android:layout_alignRight="@+id/RENT"
                android:layout_alignEnd="@+id/RENT"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD INCOME"
                android:id="@+id/add_inc"
                android:textSize="20dp"
                android:background="#ffffd26d"
                android:textStyle="normal|bold"
                android:clickable="false"
                android:layout_below="@+id/add_exp"
                android:layout_alignRight="@+id/add_exp"
                android:layout_alignEnd="@+id/add_exp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CALCULATOR"
                android:id="@+id/btn_calc"
                android:textSize="20dp"
                android:background="#ffffd26d"
                android:textStyle="normal|bold"
                android:clickable="false"
                android:layout_below="@+id/frameLayout9"
                android:layout_alignRight="@+id/frameLayout9"
                android:layout_alignEnd="@+id/frameLayout9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
