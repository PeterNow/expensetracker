<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".MainActivity"
    >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            tools:context=".menu_calculator"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="#fffffccb"
            android:clipChildren="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       calculator"
                android:id="@+id/textView"
                android:textSize="35dp"
                android:textColorHighlight="#ffff1017"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:layout_alignParentTop="true"
                android:textAllCaps="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/text1"
                android:layout_alignEnd="@+id/text1"
                android:background="#ffff3e1a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NUMBER 1:"
                android:id="@+id/textView2"
                android:textStyle="bold|italic"
                android:textAlignment="textStart"
                android:textColor="#ffff3e1a"
                android:layout_marginTop="25dp"
                android:textSize="25sp"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAllCaps="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NUMBER 2:"
                android:id="@+id/textView3"
                android:textStyle="bold|italic"
                android:textSize="25dp"
                android:textColor="#ffff3e1a"
                android:textAllCaps="true"
                android:layout_below="@+id/text1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/add"
                android:layout_above="@+id/div"
                android:textColor="#ff000000"
                android:textSize="25dp"
                android:textStyle="normal|bold"
                android:layout_alignTop="@+id/sub"
                android:textAllCaps="true"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/sub"
                android:textColor="#ff000000"
                android:textSize="25dp"
                android:textStyle="normal|bold"
                android:layout_above="@+id/mul"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/mul"
                android:textColor="#ff000000"
                android:textSize="25dp"
                android:textStyle="normal|bold"
                android:layout_alignTop="@+id/div"
                android:layout_alignLeft="@+id/sub"
                android:layout_alignStart="@+id/sub"
                android:textAllCaps="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/div"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/add"
                android:layout_alignStart="@+id/add"
                android:textColor="#ff000000"
                android:textSize="25dp"
                android:textStyle="normal|bold"
                android:textAllCaps="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESULT:"
                android:id="@+id/textView4"
                android:layout_below="@+id/mul"
                android:layout_alignLeft="@+id/div"
                android:layout_alignStart="@+id/div"
                android:layout_marginTop="47dp"
                android:textAllCaps="true"
                android:textStyle="normal|bold"
                android:textColor="#ffff3e1a"
                android:textSize="25dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result"
                android:layout_below="@+id/textView4"
                android:background="#ffffcd52"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:textAllCaps="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="^"
                android:id="@+id/expo"
                android:textStyle="normal|bold"
                android:textColor="#ff010101"
                android:textAllCaps="true"
                android:layout_alignTop="@+id/sub"
                android:layout_alignLeft="@+id/mod"
                android:layout_alignStart="@+id/mod" />
            "
            android:textSize="25dp"
            android:layout_above="@+id/mul"
            android:layout_alignRight="@+id/text2"
            android:layout_alignEnd="@+id/text2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:id="@+id/mod"
                android:layout_alignTop="@+id/mul"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textStyle="normal|bold"
                android:textSize="25dp"
                android:textColor="#ff000000"
                android:textAllCaps="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/text1"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/expo"
                android:layout_alignEnd="@+id/expo"
                android:background="#ffffcd52" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/text2"
                android:background="#ffffcd52"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffff3e1a"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/frameLayout8">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOME"
                    android:id="@+id/hme"
                    android:layout_gravity="center_horizontal|top"
                    android:textSize="25dp"
                    android:background="#fffffccb"
                    android:textStyle="bold"
                    android:textColor="#ffff6e00" />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>